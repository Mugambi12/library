<div>
  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="<%= book.title %>" placeholder="Enter book title" />
</div>
<div>
  <label for="author">Author</label>
  <select id="author" name="author">
    <option value="" disabled selected>Choose an author</option>
    <% authors.forEach(author => { %>
    <% if (author.id === book.author) { %>
    <option value="<%= author.id %>" selected><%= author.name %></option>
    <% } else { %>
    <option value="<%= author.id %>"><%= author.name %></option>
    <% } %>
    <% }) %>
  </select>
</div>
<div>
  <label for="publishDate">Publish Date</label>
  <input type="date" id="publishDate" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" />
</div>
<div>
  <label for="pageCount">Page Count</label>
  <input type="number" id="pageCount" name="pageCount" min="1" value="<%= book.pageCount %>" />
</div>
<div>
  <label for="cover">Cover</label>
  <input type="file" id="cover" name="cover" />
</div>
<div>
  <label for="description">Description</label>
  <textarea id="description" name="description" placeholder="Enter book description"><%= book.description %></textarea>
</div>
<h2><%= book.title %></h2>
<img width="100" height="150" src="<%= book.coverImagePath %>" alt="<%= book.title %>" />
<div>Author: <%= book.author.name %></div>
<div>Published: <%= book.publishedDate %></div>
<div>Pages: <%= book.pageCount %></div>
<div>Description: <%= book.description %></div>

<!-- Page Links -->
<div>
  <a href="/books/<%= book.id %>/edit">Edit</a>
  <%- include('../partials/deleteForm', { url: `/books/${book.id}/?_method=DELETE` }) %>
  <a href="/authors/<%= book.author.id %>">Author</a>
</div>
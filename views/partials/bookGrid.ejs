<% bookCoverClass = locals.small ? 'book-cover-large' : '' %>
<% bookGridClass = locals.small ? 'book-grid-large' : '' %>
<div class="book-grid <%= bookGridClass %>">
  <% books.forEach(book => { %>
  <a href="/books/<%= book.id %>">
    <img class="book-cover <%= bookCoverClass %>" src="<%= book.coverImagePath %>">
  </a>
  <% }) %>
</div>
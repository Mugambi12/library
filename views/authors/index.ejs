<h2>Search Authors</h2>
<form action="/authors" method="GET">
  <label for="search">Search</label>
  <input type="text" id="search" name="name" value="<%= searchOptions.name %>" placeholder="Search authors" />
  <button type="submit">Search</button>
</form>

<div>
  <% authors.forEach(author => { %>
  <div><%= author.name %></div>
  <a href="/authors/<%= author.id %>">View</a>
  <a href="/authors/<%= author.id %>/edit">Edit</a>
  <%- include('../partials/deleteForm', { url: `/authors/${author.id}/?_method=DELETE` }) %>
  <% }) %>
</div>